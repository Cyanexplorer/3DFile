<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.g3863.a3dfile.View.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.example.g3863.a3dfile.View.Object.Glsurface_Ext
        android:id="@+id/glSurface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/glSurface"
        app:layout_constraintTop_toTopOf="@+id/glSurface">

        <com.example.g3863.a3dfile.View.Object.PressImageButton
            android:id="@+id/selectButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/presence_invisible"
            app:srcCompat="@drawable/select_option" />

        <com.example.g3863.a3dfile.View.Object.PressImageButton
            android:id="@+id/moveButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/presence_invisible"
            app:srcCompat="@drawable/trans_option" />

        <com.example.g3863.a3dfile.View.Object.PressImageButton
            android:id="@+id/rotateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/presence_invisible"
            app:srcCompat="@drawable/rotate_option" />

        <com.example.g3863.a3dfile.View.Object.PressImageButton
            android:id="@+id/texButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/presence_invisible"
            app:srcCompat="@drawable/texture_option" />

        <com.example.g3863.a3dfile.View.Object.PressImageButton
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/presence_invisible"
            app:layout_constraintBottom_toBottomOf="@+id/glSurface"
            app:layout_constraintRight_toRightOf="@+id/glSurface"
            app:srcCompat="@drawable/delete_option" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
